{
  "private": true,
  "scripts": {
    "build": "pnpm --filter \"*\" build",
    "clear": "pnpm --filter \"*\" clear",
    "dev": "pnpm --filter api dev",
    "format": "prettier . --write",
    "lint": "prettier . --check && pnpm --filter \"*\" lint",
    "typecheck": "pnpm --filter \"*\" typecheck",
    "scrape": "pnpm --filter scraper start",
    "migrate": "pnpm --filter db-main-kysely migrate",
    "codegen": "pnpm --filter db-main-kysely codegen",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "3.0.3"
  },
  "pnpm": {
    "overrides": {
      "tsconfig-paths": "^4.0.0"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
